{
  "name": "suo-design-pro",
  "version": "0.1.0",
  "private": true,
  "author": "Suo Shao",
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "cross-env NODE_ENV=testing vue-cli-service test:unit",
    "coverage": "cross-env NODE_ENV=testing vue-cli-service test:unit --coverage",
    "watch": "cross-env NODE_ENV=testing vue-cli-service test:unit --watch",
    "report": "cross-env NODE_ENV=production vue-cli-service build --report",
    "build-deploy": "cross-env NODE_ENV=production vue-cli-service build --dest ../suo-design-pro-dist/",
    "build-deploy-report": "cross-env NODE_ENV=production vue-cli-service build --dest ../suo-design-pro-dist/ --report",
    "genlog": "conventional-changelog -p angular -i .github/CHANGELOG.md -s"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "core-js": "^3.1.2",
    "dsbridge": "^3.1.4",
    "moment": "^2.24.0",
    "vant": "^2.2.12",
    "vue": "^2.6.10",
    "vue-router": "^3.0.6",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@vue/cli-plugin-unit-jest": "^4.0.5",
    "@vue/cli-service": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-eslint": "^10.0.3",
    "babel-plugin-import": "^1.12.2",
    "commitizen": "^4.0.3",
    "conventional-changelog": "^3.1.18",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^5.16.0",
    "cross-env": "^6.0.3",
    "eslint-config-standard": "^6.2.1",
    "eslint-friendly-formatter": "^2.0.7",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.3.1",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "jest": "^24.9.0",
    "postcss-pxtorem": "^4.0.1",
    "pug": "^3.0.1",
    "pug-html-loader": "^1.1.5",
    "pug-plain-loader": "^1.0.0",
    "sass": "^1.24.0",
    "sass-loader": "^8.0.0",
    "vconsole": "^3.3.4",
    "vue-template-compiler": "^2.6.10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
